<body class="grid-y">

  <!-- ส่วนหัว -->
  <div class="grid-x bgportforio" style="height: 20vh">
    <div class="cell small-2"></div>
    <div class="cell small-10">
      <div class="image-hover-wrapper">
        <div class="avatar-preview">
          <a >
            <div id="profileimage2" class="imagePreview" style="background-image: url(./userprofile/<%=selectuser.profilePic%>);"></div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- แถว ที่สอง -->
  <div class="grid-x">
    <div class="cell medium-2" style="background:#FAFAFA;"></div>
    <div class="cell medium-7">
      <div class="grid-x">
        <div class="cell medium-3">

        </div>
        <div class="cell medium-8 about-the-author" style="padding:2rem;">
          <h1 class="separator-left" style="font-size:30px;">
            <%=selectuser.academicPositions%>
            <%=selectuser.firstname%>
            <%=selectuser.lastname%>
          </h1>
          <p><b>อาจารย์ประจำ</b>
            <% for(var i=0; i<data4.length; i++) {%>
            <%if (data4[i].Sub_Dpment_ID==selectuser.subdepartment) { %>
            <%=data4[i].Sub_Dpment_name%>
            <% } %>
            <% } %>

            <% for(var i=0; i<data3.length; i++) {%>
            <%if (data3[i].departmentID==selectuser.department) { %>
            <%=data3[i].departmentName%>
            <% } %>
            <% } %>

            <% for(var i=0; i<data2.length; i++) {%>
            <%if (data2[i].facultyID==selectuser.faculty) { %>
            <%=data2[i].facultyName%>
            <% } %>
            <% } %>
          </p>
        </div>
      </div>
    </div>
    <div class="cell medium-3" style="background:#FAFAFA;"></div>
  </div>


  <!-- แถว ที่สาม -->
  <div class="grid-x" >
    <div class="cell medium-2" style="background:#FAFAFA;height: 50vh"></div>
    <div class="cell medium-7">
      <div class="grid-x">
        <div class="cell medium-3">
          <ul class="vertical tabs rs-tabs" data-tabs id="example-tabs">
            <li class="rs-tabs-title tabs-title is-active"><a href="#panel1v" aria-selected="true">โครงการที่เป็นหัวหน้าโครงการวิจัย</a></li>
            <li class="rs-tabs-title tabs-title"><a href="#panel2v">โครงการที่เป็นผู้ร่วมโครงการวิจัย</a></li>
            <li class="rs-tabs-title tabs-title"><a href="#panel3v">ผลงานอื่น ๆ ของฉัน</a></li>
          </ul>
        </div>
        <div class="cell medium-9 about-the-author">
          <div class="tabs-content" data-tabs-content="example-tabs">
            <div class="tabs-panel is-active" id="panel1v">
              <table id="myProjectTable" class="hover unstriped myProjectTable" style="width:100%">
                <thead>
                  <tr>
                    <th>ปีงบประมาณ</th>
                    <th>ชื่อโครงการ</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% if(dataLDProj.length){
                                for(var i = 0;i < dataLDProj.length;i++) { %>
                  <tr class="showhim ">
                    <td>
                      <%=dataLDProj[i].grants_Years%>
                    </td>
                    <td>
                      <%=dataLDProj[i].projectNameTH%>
                    </td>
                    <td></td>
                  </tr>
                  <% }
                              }else{ %>
                  <tr>
                    <td colspan="3">ไม่มีข้อมูล</td>
                  </tr>

                  <% } %>
                </tbody>


              </table>
            </div>
            <div class="tabs-panel" id="panel2v">
              <table class="hover unstriped myProjectTable h2c" style="width:100%">
                <thead>
                  <tr>
                    <th>ปีงบประมาณ</th>
                    <th>ชื่อโครงการ</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% if(dataRSProj.length){
                                for(var i = 0;i < dataRSProj.length;i++) { %>
                  <tr class="showhim ">
                    <td style="width:55px">
                      <%=dataRSProj[i].grants_Years%>
                    </td>
                    <td>
                      <%=dataRSProj[i].projectNameTH%>
                    </td>
                    <td style="width:55px">
                    </td>
                  </tr>
                  <% }
                              }else{ %>
                  <tr>
                    <td colspan="3">ไม่มีข้อมูล</td>
                  </tr>

                  <% } %>
                </tbody>


              </table>
            </div>
            <div class="tabs-panel" id="panel3v">
              <table class="hover unstriped myProjectTable h3c" style="width:100%">
                <thead>
                  <tr>
                    <th>ชื่อผลงาน</th>
                    <th>ประเภทผลงาน</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% if(dataPortforio.length){
                                for(var i = 0;i < dataPortforio.length;i++) { %>
                  <tr class="showhim ">
                    <td >
                      <%=dataPortforio[i].title%>
                    </td>
                    <td>
                      <% if (dataPortforio[i].categoryID == "1") { %>ผลงานการเผยแพร่ทางวิชาการ<% } %>
											<% if (dataPortforio[i].categoryID == "2") { %>ทรัพย์สินทางปัญญา<% } %>
											<% if (dataPortforio[i].categoryID == "3") { %>รางวัลจากการประกวดงานวิจัย<% } %>
											<% if (dataPortforio[i].categoryID == "4") { %>สิ่งประดิษฐ<% } %>
											<% if (dataPortforio[i].categoryID == "5") { %>ใบรับรอง<% } %>
                    </td>
                    <td >
                    </td>
                  </tr>
                  <% }
                              }else{ %>
                  <tr>
                    <td colspan="3">ไม่มีข้อมูล</td>
                  </tr>

                  <% } %>
                </tbody>


              </table>
            </div>
          </div>



        </div>
      </div>
    </div>
    <div class="cell medium-3" style="background:#FAFAFA;"></div>
  </div>





