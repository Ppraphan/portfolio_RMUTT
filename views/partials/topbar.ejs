<div class="ui fixed inverted menu">
  <div class="ui container">
    <a href="/" class="header item">
      <img class="logo" src="logo-03.png">Our Researcher</a>
    <a href="/" class="item">หน้าแรก</a>
    <% if (userinfo != '' && userinfo != undefined ) { %>
    <div class="right menu">
      <div class="ui simple dropdown item">

        <img class="ui avatar image" src="./userprofile/<%=userinfo.profilePic%>"><span> <i class="bars icon"></i></span>
        <div class="menu">
          <a class="item" href="/profile/<%=userinfo.id%>-<%=userinfo.firstname%>-<%=userinfo.lastname%>"><i class="user circle icon"></i> ข้อมูลของฉัน</a>
          <div class="divider"></div>
          <a class="item" href="/create-bs-cards"><i class="id card outline icon"></i> สร้างนามบัตร</a>
          <div class="divider"></div>
          <% if (userinfo.userPermission == "admin") { %>
            <a class="red item"  href="/dashboard"><i class="cogs icon"></i> จัดการข้อมูลในระบบ</a>
            <div class="divider"></div>
          <% } %>
          <a class="item" href="/logout"><i class="sign-out icon"></i> ออกจากระบบ</a>
        </div>

      </div>

    </div>
    <% } else{ %>
    <div class="right menu">
      <a class="item" href="/signin"><i class="sign-out icon"></i> ลงชื่อเข้าใช้</a>
    </div>
    <% } %>
  </div>
</div>
